/* pages/ucenter/ucenter.wxss */
page{
  background-color: #efefef
}
.topbg{
  height: 80px;
  background-color:#1296db;
  padding-top: 20px;
  margin-bottom: 80px;
}
.userinfo{
  height: 120px;
  background-color: #ffffff;
  margin: 10px 10px 20px 10px;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  padding: 10px 0px 0px 10px;
}
.userinfo-text{
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
  
}
.userinfo-text image{
  width: 50px;
  height: 50px;
  border-radius: 25px;
}
.userinfo-text-name{
  display: flex;
  flex-direction: column;
  padding-left: 10px;
  line-height: 25px;
}
.userinfo-text-name .name{
  font-size: 14pt;
  font-weight: 500;
}

.userinfo-text-name .edit{
  font-size: 12pt;
  color: #cdcdcd;
}
.userinfo-menu{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.userinfo-menu-item{
  display: flex;
  flex-direction: column;
}

.userinfo-menu-item .shuzi{
  text-align: center;
  font-size: 14pt;
  font-weight: 500;
}

.userinfo-menu-item .item{
  text-align: center;
  font-size: 12pt;
  color: #cdcdcd;
}

.menu{
  background-color: #ffffff;
  margin: 10px 10px 0px 10px;
  border: 1px solid #efefef;
  border-radius: 5px;
  padding: 10px;

}
.menu-item{
  display: flex;
  flex-direction: row;
  height: 40px;
  line-height: 40px;
  padding: 10px;
  justify-content: space-between;
  border-bottom:1px solid #efefef;
}
.menu-item-last{
  display: flex;
  flex-direction: row;
  height: 40px;
  line-height: 40px;
  padding: 10px;
  justify-content: space-between;
}
.menu-item-text{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.menu-item-text image{
  height: 25px;
  width:25px;

}
.menu-item-text text{
  padding-left:15px; 
  line-height: 25px;
  height: 25px;
}
.menu-item-icon{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.menu-item-icon image{
   height: 25px;
  width:25px;
}
