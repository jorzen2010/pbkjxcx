/* pages/spacelist/spacelist.wxss */
page{
  background-color: #efefef;
}
.spaceitem{
  margin: 10px 10px 20px 10px;
  background-color: #ffffff;
  border-radius: 5px;
}
.itemtop{
  display: flex;
  flex-direction: column;
    padding: 10px;
}
.title{
  font-weight: 400;
  line-height: 40px;
}
.smalltitle{
  font-size: 12pt;
  color: #dddddd;
  line-height: 30px;
}
.itembottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #dddddd;
  padding: 10px;
  border-radius: 0px 0px 5px 5px;
}
.itembottom text{
  color: #ffffff;
}