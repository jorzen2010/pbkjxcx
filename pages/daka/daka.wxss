/* pages/daka/daka.wxss */
page{
  background-color: #efefef;
}

.dakabiaoti{
  border-left: 5px coral solid;
  margin: 10px 10px 0px 10px;
  background-color: #ffffff;
  padding: 10px 0px 10px 10px;
  font-weight: 500;
}
.dakayaoqiu{
  margin: 0px 10px 10px 10px;
  background-color: #ffffff;
  padding: 10px;
  display: flex;
  flex-direction: column;
  line-height: 30px;
}

.dakayaoqiumunu{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  line-height: 40px;
}
.dakasection{
  display: flex;
  flex-direction: column;
}
.dakasection-top{
  margin: 10px 10px 0px 10px;
  background-color: #ffffff;
  padding: 10px 10px 5px 10px;
}
.dakasection-textarea{
  margin: 0px 10px 10px 10px;
  background-color: #ffffff;
  height: 280px;
  padding: 10px;
}
.dakasection-textarea textarea{
  width: 100%;
}
.dakasection-button{
  margin: 10px;
}
.dakasection-button button{
  border-radius: 50px;
}


.daka-list{
  padding: 10px;
}

.daka-item{
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  padding: 10px 5px 5px 5px;
  margin-bottom: 10px;
  border-bottom: 1px solid #efefef;
  border-radius: 0px 5px;
}
.daka-item-user{
  display: flex;
  flex-direction: row;
}
.daka-item-user image{
   width: 40px;
  height: 40px;
  border-radius: 20px;
  line-height: 28px;
}
.daka-item-usertext{
  display: flex;
  flex-direction: column;
  font-size: 12pt;
  padding-left: 10px;
}