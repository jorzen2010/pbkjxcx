/* pages/spacedaka/spacedaka.wxss */
@import "/pages/template/space-top.wxss";
.dakacontainer{
  padding: 10px;
}
.dakaitem{
  border: 1px solid #ffffff;
  box-shadow: 5px 5px 5px #efefef;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  margin:10px 0px;
  padding: 10px;
}
.dakaitem-top{
  display: flex;
  flex-direction: row;
}
.dakaitem-name{
  display: flex;
  flex-direction: column;
  padding-left: 20px;
}
.dakaitem-top image{
    width: 50px;
  height: 50px;
  border-radius: 25px;
}
.dakaitem-content{
  line-height: 30px;
  color: #cdcdcd;
}
.dakaitem-bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 35px;
  line-height: 35px;
}
.dakaitem-bottom text{
  padding: 0px 10px;
}