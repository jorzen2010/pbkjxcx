/* pages/spacedaka/spacedaka.wxss */
.spaceinfo{
  display: flex;
  flex-direction: column;
  background-color: #1296db;
  padding: 10px;
}
.spacetitle{
  font-weight: 500;
  color: #ffffff;
  line-height: 50px;
}
.spaceinfo button{
  margin-top: 10px;
  background-color: #0000dd;
  color: #ffffff;
  align-self: flex-start;
}
.spacemenu{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10px 20px;
  background-color: #1296db;
  color: #ffffff;
  border-top: 1px solid #ffffff;
}
.dakacontainer{
  padding: 10px;
}
.dakaitem{
  border: 1px solid #ffffff;
  box-shadow: 5px 5px 5px #efefef;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  margin:10px 0px;
  padding: 10px;
}
.dakaitem-top{
  display: flex;
  flex-direction: row;
}
.dakaitem-name{
  display: flex;
  flex-direction: column;
  padding-left: 20px;
}
.dakaitem-top image{
    width: 50px;
  height: 50px;
  border-radius: 25px;
}
.dakaitem-content{
  line-height: 30px;
  color: #cdcdcd;
}
.dakaitem-bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 35px;
  line-height: 35px;
}
.dakaitem-bottom text{
  padding: 0px 10px;
}