<view class='biji-container'>
<h3>陪伴日记</h3><text class='title-more'>更多</text>
<view class='biji-list'>
<block wx:for='{{bijis}}' wx:key='key'>
<text bindtap='dakacontent' data-id='{{item.Id}}'>{{item.DakaTitle}}</text>
</block>
</view>
</view>

<view class='space-container'>

<h3>推荐空间</h3><text class='title-more'  bindtap='spacelist'>更多</text>
<view class='space-list'>


<block wx:for='{{spaceslist}}' wx:key='key'>
<view class='space-item' bindtap='spaceinfo'  data-id="{{item.Id}}">
<view class='spaceitem-img'>
<image src="/src/images/shu.png" mode='scaleToFill'></image>
</view>
<view class='spaceitem-content'>
<h4>{{item.Title}}</h4>
<text class='content-tags'>赵征  356条评论 | 39343人参与</text>
<text>{{item.Info}}</text>
</view>
</view>
</block>

