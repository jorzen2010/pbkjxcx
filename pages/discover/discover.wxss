/* pages/discover/discover.wxss */
page{
  background-color: #efefef;
}
swiper{
  width: 100%;
  height: 400rpx;
}
swiper image{
  width: 100%;
  height: 100%;
}
.scroll-x {
  display: flex;
  flex-direction: row; 
  width: 100%;
  white-space: nowrap;
}
.green
{
  display: flex;
  align-items: center;
  width: 400rpx;
  height: 400rpx;
  background: green;
}
.red
{
  display: flex;
  align-items: center;
  width: 400rpx;
  height: 400rpx;
  background: red;
}
.yellow
{
  display: flex;
  align-items: center;
  width: 400rpx;
  height: 400rpx;
  background: yellow;
}

.biji-container{
background-color: #ffffff;
padding: 10px;
}
.biji-container h3{
  font-size: 13pt;
  font-weight: 500;
  line-height: 50px;
}

.biji-list text{
  color: #999999;
  line-height: 35px;
  display: block;
}




.space-container{
  margin-top: 10px;
  background-color: #ffffff;
padding: 10px;
}
.space-container h3{
  font-size: 13pt;
  font-weight: 500;
  line-height: 50px;
}
.space-item{
  margin-bottom: 20px;
  display: flex;
  flex-direction: row;

}
.spaceitem-img{
  float: left;
  padding-right: 5px;
 
}
.spaceitem-img image{
 height: 140px;
  width: 100px;
  border-radius: 10px;
}
.spaceitem-content{
  padding-left: 10px;
  float: right;
  width: 100%;
}
.spaceitem-content h4{
  font-size: 12pt;
  font-weight: 400;
  display: block;
}
.spaceitem-content .content-tags{
  font-size: 9pt;
}
.spaceitem-content text{
  display: block;
  line-height: 30px;
  color: #888888;
}

.peibanshi-container{
margin: 10px;
}
.peibanshi-container h3{
  font-size: 13pt;
  font-weight: 500;
  line-height: 50px;
}
.peibanshi-list{
  display: flex;
  flex-direction: row;
  width: 100%;

}
.peibanshi-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33%;
}
.peibanshi-item image{
  height: 80px;
  width: 80px;
  border-radius: 50px;
}
.peibanshi-item h5{
  line-height: 40px;
}




.title-more{
  font-size: 9pt;
  float: right;
  line-height: 50px;
  color: #999999;
}