/* pages/dakacontent/dakacontent.wxss */
 @import "../../utils/wxParse/wxParse.wxss"; 
 page{
   background-color: #ffffff;
 }
.dakacontent{
  display: flex;
  flex-direction: column;
  padding: 10px;
}

.history{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.history-yuedu{
  color: #cdcdcd;
}
.histroy-dianzan{
  color: rgb(33, 33, 146);
}
.title{
  font-size: 14pt;
  font-weight: 500;
  line-height: 30px;
}
.smalltitle{
  font-size: 12pt;
  color: #cdcdcd;
  line-height: 50px;
}
.content{
  line-height: 40px;
  color: #888888;
  margin-bottom: 60px;
}
.bottommenu{
  position:fixed; 
  bottom:0;
  width: 100%;
  text-align: center;
  height: 50px;
  line-height: 50px;
  background-color:red;
  color: #ffffff;
}
.dianzancontent{
  color: red;
  font-size: 14pt;
  font-weight: 500;
  text-align: center;
  margin-bottom: 40px;
}
.pingluntitle{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10px 0px;
}

.pingluncontent{
  display: flex;
  flex-direction: column;
  padding-bottom: 30px;
  padding: 10px;
  background-color: #efefef;
}
.dianzanavatar{
  width: 28px;
  height: 28px;
  border-radius: 14px;
  margin: 2px;
}
.pinglunrens{
  height: 50px;
  line-height: 50px;
  vertical-align: middle;
  align-items: center;
  justify-items: center;
  border:1px solid #000000;
}